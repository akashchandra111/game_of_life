CC = gcc
STD = -std=c17
OPTIMIZE = -Ofast
LIBS = -lraylib -lm -lpthread -ldl -lrt -lX11
WARN = -Wall -Werror
LIBPATH = -L lib/linux

game_of_life : *.o
	$(CC) $^ -o $@ $(LIBS) $(LIBPATH) $(OPTIMIZE) $(STD) $(WARN)

*.o : src/*.c main.c
	$(CC) $^ -c $(OPTIMIZE) $(STD)

clean :
	rm *.o
	rm game_of_life
